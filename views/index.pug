extends layout

block content
  header
    div(class="container")
      div(class="row")
        div(class="col-md-12")
          h1(class="super-title") Trans Culture
          a(href="/explore" id="landing-button-experiences" class="btn btn-primary btn-lg landing-button")
            i(class="fa fa-users fa-lg" aria-hidden="true")
              span(class="landing-button-text") Book an Experience
          a(href="/create-tour" id="landing-button-tour-guide" class="btn btn-primary btn-lg landing-button")
            i(class="fa fa-automobile fa-lg" aria-hidden="true")
              span(class="landing-button-text") Be a tour guide
          p(class="sub-text")
            span(class="sub-inner-text") Thousands of Local Experiences for your Happiness

  section(class="container")
    div(class="form-container")
      h2(class="section-title") Featured Experiences
      div(class="row")
        each t, index in tours
            div(class="col-lg-4 col-md-6 mb-4")
              div(class="card h-100")
                a(href="#")
                  img(class="card-img-top" src=`images/photo${index}.jpeg` alt="")
                div(class="card-body")
                  h4(class="card-title")
                    a(href="#")= t.title
                  h5 $#{t.price}
                  p(class="card-text") #{t.summary}
                div(class="card-footer")
                  small(class="text-muted") &#9733; &#9733; &#9733; &#9733; &#9734;


      div(class="view-experiences")
        a(href="/explore" class="btn btn-lg btn-primary") Explore Experiences