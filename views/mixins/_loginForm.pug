mixin loginForm(actionType)
  section(class="container-fluid")
    div(class="form-container col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3")
      form(action=`/${actionType}` method="POST")
        h2(class="text-uppercase") #{title}
        input(type="hidden" name="_csrf" value= csrfToken)
        div(class="form-group")
          input(type="text" name="username" class="form-control" placeholder="enter username" required)
        div(class="form-group")
          input(type="password" name="password" class="form-control" placeholder="enter password" minlength="4" required)
        button(type="submit" class="btn btn-success btn-lg") Submit
      if (title != 'Connect Local')
        h4(class="text-muted login-alt") or you can #{title} with one of the following:
        div
          a(href="/auth/google")
            button(class="btn btn-lg icon-wrapper btn-bg-google")
              i(class="fa fa-google-plus fa-lg" aria-hidden="true")
              span Google
          a(href="/auth/twitter")
            button(class="btn btn-lg icon-wrapper btn-bg-twitter")
              i(class="fa fa-twitter fa-lg" aria-hidden="true")
              span Twitter
          a(href="/auth/facebook")
            button(class="btn btn-lg icon-wrapper btn-bg-facebook")
              i(class="fa fa-facebook fa-lg" aria-hidden="true")
              span Facebook